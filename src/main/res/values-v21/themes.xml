<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorDarkestGrey</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorDarkestGrey</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/student_transition
        </item>

        <item name="android:windowSharedElementExitTransition">
            @transition/student_transition
        </item>
        <item name="radioButton">@style/RadioButton.Dark</item>
        <item name="bottomMenu">@style/BottomMenu.Dark</item>
        <item name="cardView">@style/CardView.Dark</item>
        <item name="editText">@style/EditText.Dark</item>
        <item name="button">@style/Button</item>
        <item name="textView">@style/TextView.Dark</item>
        <item name="switchButton">@style/Switch.Dark</item>
        <item name="checkBox">@style/CheckBox.Dark</item>
        <item name="ic_inactive_color">@color/colorGrey</item>
        <item name="ic_active_color">@color/colorPrimary</item>
        <item name="tabLayout">@style/TabLayout.Dark</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorLightBlue</item>
        <item name="android:navigationBarColor">@color/colorGreyBlue</item>
        <item name="android:statusBarColor">@color/colorPearlGrey</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/student_transition
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/student_transition
        </item>
        <item name="radioButton">@style/RadioButton.Light</item>
        <item name="bottomMenu">@style/BottomMenu.Light</item>
        <item name="cardView">@style/CardView.Light</item>
        <item name="editText">@style/EditText.Light</item>
        <item name="button">@style/Button</item>
        <item name="textView">@style/TextView.Light</item>
        <item name="switchButton">@style/Switch.Light</item>
        <item name="checkBox">@style/CheckBox.Light</item>
        <item name="ic_inactive_color">@color/colorPalePumpkin</item>
        <item name="ic_active_color">@color/colorPumpkin</item>
        <item name="tabLayout">@style/TabLayout.Light</item>
    </style>
</resources>