<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="BottomMenu.Dark" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomMenu.Light" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadioButton.Dark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="RadioButton.Light" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ImageView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Switch.Dark" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorOrange</item>
        <item name="android:colorForeground">@color/colorGreyBlue</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorGrey</item>
    </style>

    <style name="Switch.Light" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorOrange</item>
        <item name="android:colorForeground">@color/colorGreyBlue</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorBlack</item>
    </style>

    <style name="CardView.Dark" parent="CardView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorDarkGrey</item>
    </style>

    <style name="CardView.Light" parent="CardView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorLightGrey</item>
    </style>

    <style name="Avatar" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/profile</item>
        <item name="civ_border_width">0dp</item>
    </style>

    <style name="EditText.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorTransparentGrey</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edittext_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorSilver</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edittext_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="TextView.Dark" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TextView.Light" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CheckBox.Dark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="CheckBox.Light" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AlertDialogDanger" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TabLayout.Dark" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorSibFU</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabTextColor">@color/colorTransparentGrey</item>
    </style>

    <style name="TabLayout.Light" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorSibFU</item>
        <item name="tabSelectedTextColor">@color/colorBlack</item>
        <item name="tabTextColor">@color/colorTransparentBlack</item>
    </style>

</resources>
