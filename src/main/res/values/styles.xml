<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Btn" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomMenuDark" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomMenuLight" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
