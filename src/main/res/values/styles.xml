<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="Btn" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="BottomMenuDark" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomMenuLight" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadioButtonDark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="RadioButtonLight" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ImageView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorOrange</item>
        <item name="android:colorForeground">@color/colorWhite</item>
    </style>

    <style name="CardFIO" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Avatar" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/profile</item>
    </style>

</resources>
