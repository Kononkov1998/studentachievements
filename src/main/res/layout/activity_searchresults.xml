<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/search_results"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/colorGrey" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true">
        </ListView>

        <LinearLayout
            style="@style/LinearLayout">

            <ImageView
                android:id="@+id/imageProfile"
                style="@style/ImageView"
                android:onClick="openProfile"
                android:src="@drawable/ic_home_grey_24dp" />

            <ImageView
                android:id="@+id/imageGrade"
                style="@style/ImageView"
                android:onClick="openGrade"
                android:src="@drawable/ic_school_grey_24dp" />

            <ImageView
                android:id="@+id/imageSearch"
                style="@style/ImageView"
                android:src="@drawable/ic_search_orange_24dp" />

            <ImageView
                android:id="@+id/imageFavorites"
                style="@style/ImageView"
                android:onClick="openFavorites"
                android:src="@drawable/ic_star_border_grey_24dp" />

            <ImageView
                android:id="@+id/imageSettings"
                style="@style/ImageView"
                android:onClick="openSettings"
                android:src="@drawable/ic_settings_grey_24dp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>