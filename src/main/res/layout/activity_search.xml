<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkestGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/LinearLayout">

            <ImageView
                android:id="@+id/imageProfile"
                style="@style/ImageView"
                android:onClick="openProfile"
                android:src="@drawable/ic_home_grey_24dp" />

            <ImageView
                android:id="@+id/imageGrade"
                style="@style/ImageView"
                android:onClick="openGrade"
                android:src="@drawable/ic_school_grey_24dp" />

            <ImageView
                android:id="@+id/imageSearch"
                style="@style/ImageView"
                android:src="@drawable/ic_search_orange_24dp" />

            <ImageView
                android:id="@+id/imageFavorites"
                style="@style/ImageView"
                android:onClick="openFavorites"
                android:src="@drawable/ic_star_border_grey_24dp" />

            <ImageView
                android:id="@+id/imageSettings"
                style="@style/ImageView"
                android:onClick="openSettings"
                android:src="@drawable/ic_settings_grey_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="35dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textViewName"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="@string/name"
                android:singleLine="true"
                android:gravity="center"
                style="@style/EditText"/>

            <EditText
                android:id="@+id/textViewSurname"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="@string/surname"
                android:singleLine="true"
                android:gravity="center"
                style="@style/EditText"/>

            <EditText
                android:id="@+id/textViewPatronymic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="@string/patronymic"
                android:singleLine="true"
                android:gravity="center"
                style="@style/EditText"/>
            <EditText
                android:id="@+id/textViewGroup"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:hint="@string/group_number"
                android:singleLine="true"
                android:gravity="center"
                style="@style/EditText"/>
        </LinearLayout>

        <Button
            android:id="@+id/searchBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="search"
            android:text="@string/search"
            style="@style/Btn"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>