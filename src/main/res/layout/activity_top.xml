<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            style="?cardView"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageUser"
                        style="@style/Avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textProfile"
                        style="?textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/groupProfile"
                            style="?textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:inputType="none"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4">

                            <TextView
                                android:id="@+id/starsSum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:text="28"
                                android:textColor="@color/colorStarOrange"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_star_yellow_24dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/place"
                        style="?textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:inputType="none"
                        android:text="X"
                        android:textColor="@color/colorPumpkin"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        style="?textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:inputType="none"
                        android:text="место"
                        android:textColor="@color/colorPumpkin"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            style="?tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout style="?bottomMenu">

        <ImageView
            android:id="@+id/imageProfile"
            style="@style/ImageView"
            android:onClick="openProfile"
            android:src="@drawable/ic_home_24dp"
            android:tint="?ic_inactive_color" />

        <ImageView
            android:id="@+id/imageGrade"
            style="@style/ImageView"
            android:onClick="openGrade"
            android:src="@drawable/ic_school_24dp"
            android:tint="?ic_inactive_color" />

        <ImageView
            android:id="@+id/imageSearch"
            style="@style/ImageView"
            android:onClick="openSearch"
            android:src="@drawable/ic_search_24dp"
            android:tint="?ic_inactive_color" />

        <ImageView
            android:id="@+id/imageFavorites"
            style="@style/ImageView"
            android:onClick="openFavorites"
            android:src="@drawable/ic_star_border_24dp"
            android:tint="?ic_inactive_color" />

        <ImageView
            android:id="@+id/imageTop"
            style="@style/ImageView"
            android:onClick="openTop"
            android:src="@drawable/ic_supervisor_account_24dp"
            android:tint="?ic_active_color" />
    </LinearLayout>

</RelativeLayout>